# Gateway Service Environment Configuration

# CORS Configuration
GATEWAY_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Authentication
GATEWAY_AUTH_ENABLED=true

# Canary Deployment (10% rollout)
GATEWAY_CANARY_ENABLED=true
GATEWAY_CANARY_AUTH_PERCENTAGE=10

# Public Endpoints (comma-separated, no auth required)
GATEWAY_PUBLIC_ENDPOINTS=["/","/health","/docs","/openapi.json","/metrics","/auth/login","/auth/register","/auth/refresh"]

# Monitoring
GATEWAY_METRICS_ENABLED=true
GATEWAY_LOG_AUTH_FAILURES=true
